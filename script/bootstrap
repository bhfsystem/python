#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  pkg ensure security/openssl
  pkg ensure lang/python27
  pkg ensure devel/py27-pip devel/py-pip
  pkg ensure textproc/py27-expat textproc/py-expat

  #python2.7 "$shome/script/install-pip"
  pip2.7 install --upgrade --no-cache-dir virtualenv
  pip2.7 install --upgrade pyopenssl ndg-httpsclient pyasn1
}

main "$@"
