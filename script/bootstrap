#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  pkg ensure lang/python27

  python2.7 "$shome/script/install-pip"
  pip2.7 install --root "$shome/install" --upgrade virtualenv
  pip2.7 install --root "$shome/install" --upgrade pyopenssl ndg-httpsclient pyasn1
}

main "$@"
