#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  pkg ensure security/openssl
  pkg ensure lang/python35
  pkg ensure devel/py35-setuptools devel/py-setuptools
  pkg ensure devel/py35-pip devel/py-pip
  pkg ensure textproc/py35-expat textproc/py-expat

  pip3.5 install --upgrade pip
  pip3.5 install --upgrade virtualenv
  pip3.5 install --upgrade pyopenssl ndg-httpsclient pyasn1
}

main "$@"
